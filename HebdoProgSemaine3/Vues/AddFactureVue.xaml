<UserControl x:Class="HebdoProgSemaine3.Vues.AddFactureVue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HebdoProgSemaine3.Vues"
             mc:Ignorable="d" 
             d:DesignHeight="394" d:DesignWidth="681">
    <Border Background="#272537" CornerRadius="10">
        <Grid RenderTransformOrigin="0.594,0.367" Margin="10,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>

            </Grid.RowDefinitions>
            <Button Grid.Column="1" Grid.Row="3" Click="Imprimer_Click" Style="{StaticResource EnregistrerFactureButton}" Width="100"/>
            <Button  Click="AjoutFacture"  Style="{StaticResource AjouterProduitButton}" Grid.Column="1" Grid.Row="3" Width="100" HorizontalAlignment="Left" />
            <Button x:Name="ImprimerBouton" Click="PrintFacture" Style="{StaticResource ImprimerButton}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right"/>
            <TextBox VerticalAlignment="Bottom" HorizontalAlignment="Right"  Text="0"   x:Name="QteBox" Background="Transparent" Foreground="Snow" Grid.Row="3" Grid.Column="0" Margin="0,0,234,0" />
            
            <ListBox x:Name="ListProduit" Grid.Row="1"  Grid.RowSpan="2"
                     MouseDoubleClick="ClickOnProduitOnList" Style="{StaticResource ComboBoxTheme}" ItemsSource ="{Binding}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding PRO_LIB}" Foreground="Snow" Width="120"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="9"></Setter>
                        <Setter Property="Padding" Value="9"></Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
            <ListBox x:Name="currentFacture"  SelectionChanged="currentFacture_SelectionChanged" Style="{StaticResource ComboBoxTheme}" Grid.Column="1" Grid.Row="2">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="9"></Setter>
                        <Setter Property="Foreground" Value="Snow"></Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="Black"></Setter>
                                <Setter Property="BorderThickness" Value="5"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
            <Label HorizontalAlignment="Left" Content="p" x:Name="currentProduit"  Grid.Row="3"  Grid.Column="0" Style="{StaticResource TextStyle}" Margin="256,0,0,61"/>
            <Label Content="Quantité"  Style="{StaticResource TextStyle}" VerticalAlignment="Bottom" Grid.Row="3" Margin="0,0,264,0"/>
            <Label Content="Facture actuelle " Grid.Row="1" Grid.Column="1"  Style="{StaticResource TextStyle}"/>
            <Label Content=""  x:Name="nomCli"  Style="{StaticResource TextStyle}" Grid.Column="0" Grid.Row="0" VerticalAlignment="Bottom"/>
            <Label Content="Produit Séléctioné : "  Style="{StaticResource TextStyle}" Grid.Row="3" Width="Auto" Height="Auto" Margin="0,0,70,61"/>
            <Label Content="Chercher un produit :" Grid.Column="0" Grid.Row="0" Style="{StaticResource TextStyle}"/>
            <Label x:Name="PrixTotal"  Content="Prix :" Style="{StaticResource TextStyle}" Grid.Column="1" Grid.Row="3" ></Label>
            <TextBox  x:Name="nomProduit" Background="DarkGray" Foreground="Snow"   Grid.Column="1" />

        </Grid>

    </Border>
</UserControl>
