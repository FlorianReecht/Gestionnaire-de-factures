<Window x:Class="HebdoProgSemaine3.ChoixClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HebdoProgSemaine3"
        mc:Ignorable="d"
        Title="ChoixClient" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="156,36,0,0" TextWrapping="Wrap" Text="nomClient" VerticalAlignment="Top" Width="129" Height="22" x:Name="nomClient"/>
        <Label Content="Entrez le nom du client : " HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
        <ListBox  x:Name="ClientList" Margin="10,87,515,66"/>
        <Button Content="Voir les factures " Margin="340,340,247,47" Click="See_Facture_Client_Click"/>
        <Button Content="Ajouter une facture" HorizontalAlignment="Left" Margin="574,340,0,0" VerticalAlignment="Top" Height="47" Width="188" Click="Choose_Client_Click"/>

        <Label Content="Client choisi :" HorizontalAlignment="Left" Margin="10,373,0,0" VerticalAlignment="Top" Height="47" Width="127"/>
        <Label Content="CurrentClient" HorizontalAlignment="Left" Margin="104,373,0,0" VerticalAlignment="Top" Height="45" Width="130" x:Name="currentClient"/>

    </Grid>
</Window>
